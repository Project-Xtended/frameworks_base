<resources>

    <!-- Sets a custom extra padding for the QS icons and statusbar date -->
    <dimen name="qs_items_padding">8dp</dimen>

    <!-- Network traffic monitor -->
    <dimen name="net_traffic_multi_text_size">8dp</dimen>
    <dimen name="net_traffic_txt_img_padding">1dp</dimen>

    <!-- OmniJaws -->
    <dimen name="current_weather_image_size">30dp</dimen>

    <!-- Custom Carrier Label -->
    <dimen name="status_bar_carrier_height">14dp</dimen>
    
    <!-- Burn-in protection -->
    <dimen name="horizontal_max_swift">3.0dp</dimen>
    <dimen name="vertical_max_swift">1.0dp</dimen>

    <dimen name="qs_temperatur_icon_size">16sp</dimen>

    <!-- Width of the battery icon in the status bar when set to circle style. -->
    <dimen name="status_bar_battery_icon_circle_width">14.5dp</dimen>

    <!-- QS tile title -->
    <dimen name="qs_tile_height_wo_label">48dp</dimen>

    <!-- the padding on the start and the end of the statusbar -->
    <dimen name="status_bar_extra_padding">0dp</dimen>

    <!-- The width/height of the charging indicator view on keyguard. -->
    <dimen name="keyguard_charging_indication_height">60dp</dimen>
    <dimen name="keyguard_charging_indication_width">32dp</dimen>

    <!-- Custom header -->
    <dimen name="qs_header_image_offset">25dp</dimen>
    <dimen name="qs_header_image_top_margin">4dp</dimen>
    <dimen name="qs_header_image_side_margin">4dp</dimen>
    <dimen name="qs_header_image_bottom_margin">4dp</dimen>

</resources>
